<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_72"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px2dp_30"
        android:paddingRight="@dimen/px2dp_30"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_onemonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1月"
            android:textSize="@dimen/px2sp_28"
            android:textColor="#999999"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_twomonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3月"
            android:textSize="@dimen/px2sp_28"
            android:textColor="#999999"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_threemonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6月"
            android:textSize="@dimen/px2sp_28"
            android:textColor="#999999"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_oneyear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1年"
            android:textSize="@dimen/px2sp_28"
            android:textColor="#999999"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:id="@+id/tipsview"
        android:layout_width="@dimen/px2dp_36"
        android:layout_height="@dimen/px2dp_4"
        android:layout_marginLeft="@dimen/px2dp_94"
        android:background="#369ed2" />

    <com.example.huozhenpeng.interviewui.linepic.ExchangeLinePic
        android:id="@+id/exchangelinepic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
