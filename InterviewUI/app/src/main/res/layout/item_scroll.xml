<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px2dp_36"
        android:paddingBottom="@dimen/px2dp_36"
        android:background="#ffffff"
        >

        <ImageView
            android:layout_marginLeft="@dimen/px2dp_30"
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/px2dp_46"
            android:layout_height="@dimen/px2dp_46"
            android:src="@mipmap/account_other"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/px2dp_18"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="银行理财"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_28"
                />
            <TextView
                android:id="@+id/tv_percent"
                android:layout_marginTop="@dimen/px2dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.02%"
                android:textColor="#f65e1d"
                android:textSize="@dimen/px2sp_28"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/px2dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="昨日收益"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_30"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_profit"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/px2dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+65.00"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_28"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/px2dp_18"
            android:layout_width="@dimen/px2dp_240"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px2dp_30"
            >
            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总资产"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_30"
                />
            <TextView
                android:gravity="right"
                android:layout_marginTop="@dimen/px2dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/px2dp_240"
                android:text="666.00"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_28"
                android:id="@+id/tv_totalasset"
                android:singleLine="true"
                />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/v_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_1"
        android:background="#dcdcdc"
        />

</LinearLayout>
