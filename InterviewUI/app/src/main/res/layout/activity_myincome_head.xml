<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4584c4"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_30"
        android:gravity="center_horizontal"
        android:text="累计收入"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_28"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_moneysymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_32"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_16"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="未提现"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30" />

        <TextView
            android:id="@+id/not_withdraw_value_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_10"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/default_unit_money"
            android:textColor="#fbda69"
            android:textSize="@dimen/px2sp_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_20"
        android:layout_marginBottom="@dimen/px2dp_20"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:layout_marginLeft="@dimen/px2dp_10"
            android:layout_marginRight="@dimen/px2dp_10"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_10"
                android:gravity="center_horizontal"
                android:text="月收入"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_10"
                android:gravity="center_horizontal"
                android:text="(元)"
                android:textColor="#aabad0"
                android:textSize="@dimen/px2sp_24" />
        </LinearLayout>

        <com.example.huozhenpeng.interviewui.differentcolorbar.IndicatorView
            android:id="@+id/indicatorview"
            android:layout_width="@dimen/px2dp_69"
            android:layout_height="@dimen/px2dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px2dp_10" />
    </LinearLayout>
</LinearLayout>
